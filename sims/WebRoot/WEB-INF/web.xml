<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>homework</display-name>
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
  <servlet>
    <description>关于用户的操作</description>
    <servlet-name>UserServlet</servlet-name>
    <servlet-class>servlet.UserServlet</servlet-class> 
  </servlet>
  <servlet-mapping>
    <servlet-name>UserServlet</servlet-name>
    <url-pattern>/user</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>关于学生管理的操作</description>
    <servlet-name>StuManagerServlet</servlet-name>
    <servlet-class>servlet.StuManagerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>StuManagerServlet</servlet-name>
    <url-pattern>/stu</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>关于班级管理的操作</description>
    <servlet-name>ClassManagerServlet</servlet-name>
    <servlet-class>servlet.ClassManagerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ClassManagerServlet</servlet-name>
    <url-pattern>/myclass</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>关于课程管理的操作</description>
    <servlet-name>CourseManagerServlet</servlet-name>
    <servlet-class>servlet.CourseManagerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CourseManagerServlet</servlet-name>
    <url-pattern>/course</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>关于成绩管理的操作</description>
    <servlet-name>ScoreManagerServlet</servlet-name>
    <servlet-class>servlet.ScoreManagerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ScoreManagerServlet</servlet-name>
    <url-pattern>/score</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>关于统计的操作</description>
    <servlet-name>StatisticsManagerServlet</servlet-name>
    <servlet-class>servlet.StatisticsManagerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>StatisticsManagerServlet</servlet-name>
    <url-pattern>/statistics</url-pattern>
  </servlet-mapping>
    <servlet>
    <description>关于成绩查询的操作</description>
    <servlet-name>ScoreQueryServlet</servlet-name>
    <servlet-class>servlet.ScoreQueryServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ScoreQueryServlet</servlet-name>
    <url-pattern>/scoreQuery</url-pattern>
  </servlet-mapping>
  <filter>
    <description>统一编码：UTF-8</description>
    <filter-name>CharEncodingFilter</filter-name>
    <filter-class>filter.CharEncodingFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CharEncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <description>登录检查</description>
    <filter-name>LoginCheckFilter</filter-name>
    <filter-class>filter.LoginCheckFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LoginCheckFilter</filter-name>
    <url-pattern>/login/*</url-pattern>
  </filter-mapping>
  <context-param>
    <param-name>javax.faces.PROJECT_STAGE</param-name>
    <param-value>Development</param-value>
  </context-param>
</web-app>